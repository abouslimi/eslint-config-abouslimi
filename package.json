{
  "name": "eslint-config-abouslimi",
  "version": "1.0.2",
  "description": "Personal ESLint configuration that includes airbnb-base, prettier and some personal rules.",
  "main": "rules/index.js",
  "files": [
    "rules/"
  ],
  "engines": {
    "node": ">=6.10"
  },
  "keywords": [
    "eslint",
    "config",
    "shareable",
    "personal",
    "ali",
    "hosni",
    "bouslimi",
    "abouslimi",
    "ahbouslimi"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abouslimi/eslint-config-abouslimi.git"
  },
  "author": "Ali Hosni Bouslimi <ahbouslimi@gmail.com>",
  "license": "ISC",
  "scripts": {
    "test": "eslint \"rules/**/*.js\""
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1"
  },
  "dependencies": {
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^1.19.1"
  },
  "eslintConfig": {
    "extends": "./rules/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
